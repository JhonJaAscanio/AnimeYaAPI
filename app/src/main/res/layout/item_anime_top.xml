<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llItemAnime"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_marginBottom="10dp"
    android:layout_gravity="center_horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvImgAnime"
            android:layout_width="300dp"
            android:layout_height="350dp"
            app:cardCornerRadius="10dp"

            android:elevation="8dp">

            <ImageView
                android:id="@+id/ivAnime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:background="@drawable/background"
                android:contentDescription="Anime" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/paper_background3"
            android:elevation="16dp"
            >
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/star" />

            <TextView
                android:id="@+id/tvScoreL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="5dp"
                android:text="9.99"
                android:textSize="20sp"
                android:textColor="@color/white" />

        </LinearLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="12sp"
        android:background="@drawable/paper_background1"
        android:fontFamily="@font/smash"
        android:textAllCaps="true"
        android:layout_marginBottom="10dp"
        android:padding="10dp"/>

</LinearLayout>